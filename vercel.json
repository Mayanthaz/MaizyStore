{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ],
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            
            "config": {
                "distDir": "dist"
            }
        }
    ]
}
